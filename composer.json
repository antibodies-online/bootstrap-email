{
  "name": "antibodies-online/bootstrap-email",
  "description": "A PHP port of bootstrap-email ruby package",
  "keywords": [
    "bootstrap",
    "email",
    "mail",
    "responsive"
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Benedikt Lenzen",
      "email": "benedikt.lenzen@antibodies-online.com"
    }
  ],
  "require": {
    "php": "^7.1 || ^8.0",
    "scssphp/scssphp": "^v1.10",
    "tijsverkoyen/css-to-inline-styles": "^2.2",
    "twig/twig" : "^v3.0",
    "ext-dom": "*"
  },
  "autoload": {
    "psr-4": {
      "AntibodiesOnline\\BootstrapEmail\\" : "src/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
